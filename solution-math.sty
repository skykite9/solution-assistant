\ExplSyntaxOn

\keys_define:nn { theoreminfo }
{
	name. tl_set:N = \l_my_name_tl,
	number .tl_set:N = \l_my_number_tl,
	point .tl_set:N = \l_my_point_tl,
}

\NewDocumentCommand \theoreminfokeys { m }
{
	\keys_set:nn { theoreminfo } {#1}
}

\RenewDocumentCommand \newtheorem { m m o }
{
\IfNoValueTF {#3} 
{
	\NewDocumentEnvironment{#1}{ o }{\noindent\textbf{#2} \IfNoValueTF {##1} 
	{\textbf{.}
	}
	{{\bfseries
	\theoreminfokeys{##1}
	\tl_if_empty:NF \l_my_number_tl
	{~{\l_my_number_tl}
	}
	\tl_if_empty:NF \l_my_name_tl
	{~{\normalfont(\l_my_name_tl)}
	}.}
	}
	}
	{\vskip 10pt}
}
{
	\NewDocumentEnvironment{#1}{ o }{\begin{tcolorbox}[title={\bfseries #2
	\IfNoValueTF{##1}
	{
	}
	{
	\theoreminfokeys{##1}
	\tl_if_empty:NF \l_my_number_tl
	{~{\l_my_number_tl}
	}
	\tl_if_empty:NF \l_my_name_tl
	{~{\normalfont(\l_my_name_tl)}
	}
	}
	}
	,after~title={\hfill
	\tl_if_empty:NF \l_my_point_tl
	{{(\l_my_point_tl)}
	}
	},
	#3]
	}
	{\end{tcolorbox}}
}
}



